########################################
# SERVER
########################################
server.port=${SERVER_PORT:8080}
spring.application.name=SistemaLivraria

########################################
# SPRING PROFILE (opcional)
########################################
# Ex.: dev, prod
spring.profiles.active=${SPRING_PROFILES_ACTIVE:dev}

########################################
# DATASOURCE (PostgreSQL)
########################################
spring.datasource.url=jdbc:postgresql://${DB_HOST:localhost}:${DB_PORT:5432}/${DB_NAME:sistemalivraria}
spring.datasource.username=${DB_USER:postgres}
spring.datasource.password=${DB_PASS:postgres}

########################################
# JPA / HIBERNATE
########################################
spring.jpa.hibernate.ddl-auto=${JPA_DDL_AUTO:update}  # none | validate | update | create | create-drop
spring.jpa.show-sql=${JPA_SHOW_SQL:true}
spring.jpa.properties.hibernate.format_sql=${JPA_FORMAT_SQL:true}
spring.jpa.database-platform=org.hibernate.dialect.PostgreSQLDialect

########################################
# LOGGING
########################################
logging.level.root=${LOG_LEVEL_ROOT:INFO}
logging.level.org.hibernate.SQL=${LOG_LEVEL_SQL:INFO}
logging.level.org.springframework.web=${LOG_LEVEL_WEB:INFO}

########################################
# REDIS 
########################################
spring.data.redis.host=${REDIS_HOST:localhost}
spring.data.redis.port=${REDIS_PORT:6379}

########################################
# MAIL 
########################################
spring.mail.host=${MAIL_HOST:smtp.example.com}
spring.mail.port=${MAIL_PORT:587}
spring.mail.username=${MAIL_USER:}
spring.mail.password=${MAIL_PASS:}
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true
spring.mail.from=${MAIL_FROM:no-reply@example.com}

########################################
# JWT / SECRETS 
########################################
security.jwt.secret=${JWT_SECRET:changeme-in-local-env}
security.jwt.expiration=${JWT_EXPIRATION:3600000}

########################################
# AWS S3 (opcional)
########################################
cloud.aws.region.static=${AWS_REGION:sa-east-1}
cloud.aws.credentials.access-key=${AWS_ACCESS_KEY:}
cloud.aws.credentials.secret-key=${AWS_SECRET_KEY:}
app.s3.bucket=${AWS_S3_BUCKET:}

